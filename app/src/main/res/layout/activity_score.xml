<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.qubaisy.androidiak.Score">

    <LinearLayout
        android:id="@+id/nilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nilai"
        android:textSize="40dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/penjelasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali Ke Menu Awal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="menu"
        android:background="@drawable/background_button"
        android:layout_below="@+id/jelas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/jelas"
        android:layout_below="@id/nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan Nilai"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:onClick="penjelasan"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button"
        android:layout_alignParentRight="true" />

</RelativeLayout>
</ScrollView>